FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
dimensions      [ 0 2 -1 0 0 0 0 ];

internalField   uniform %nut%;

boundaryField
{
    ".*"
    {
        type            nutkWallFunction;
        value           $internalField;
    }
	RiverBed
    {
        type            nutkRoughWallFunction;
        Ks              uniform %ks%;
        Cs              uniform 0.5;
        value           $internalField;
    }
    Inlet
    {
        type            calculated;
        value           $internalField;
    }
    Outlet
    {
        type                zeroGradient;
    }
	Ceil
	{
		type            symmetry;
	}
}

// ************************************************************************* //
