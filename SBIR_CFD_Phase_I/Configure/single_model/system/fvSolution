FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          0.01;
        smoother        GaussSeidel;
    }

    pFinal
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          0;
        smoother        GaussSeidel;
    }

    "(U|k|epsilon)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0.1;
    }

    "(U|k|epsilon)Final"
    {
        $U;
        tolerance       1e-05;
        relTol          0;
    }
}

PIMPLE
{
	momentumPredictor   no;	// was no
    nNonOrthogonalCorrectors 0;	// was 0
    nCorrectors 2;
    nOuterCorrectors 100;
    pRefPoint       %point%;
    pRefValue        0;
    outerCorrectorResidualControl
    {
        U
        {
                tolerance  1e-5;
                relTol      1;
        }
        p
        {
                tolerance  1e-6;
                relTol      1;
        }
    }
}

relaxationFactors
{
    equations
    {
        ".*"                1;
    }
}

