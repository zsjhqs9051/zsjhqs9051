FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform %k%;

boundaryField
{
    Inlet_water
    {
        type 			fixedValue;
        value           $internalField; 
    }
    Inlet_air
    {
        type 			fixedValue;
        value           $internalField; 
    }
    Outlet_water
    {
        type            zeroGradient;
    }
    Outlet_air
    {
        type            zeroGradient;
    }
    ".*"
    {
        type            kqRWallFunction;
        value           $internalField;
    }
    Ceil
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

}


// ************************************************************************* //
